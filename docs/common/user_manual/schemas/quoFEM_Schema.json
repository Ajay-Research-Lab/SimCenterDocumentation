
{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for quoFEM input.json files.",
    "type": "object",
    "properties": {
      "Applications": {
        "type": "object",
        "properties": {
          "UQ": {
            "type": "object",
            "properties": {
              "Application": {
                "type": "string"
              },
              "ApplicationData": {
                "type": "object"
              }
            },
            "description": "[incomplete desciption.]",
            "required": [
              "Application",
              "ApplicationData"
            ]
          }
        },
        "required": [
          "UQ"
        ]
      },
      "EDP": {
        "type": "array",
        "description": "Inputs for the EDP tab.",
        "title": "QoI",
        "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              }
            },
            "required": [
              "name"
            ]
          }
      },
      "UQ_Method": {
        "type": "object",
        "description": "Inputs for the UQ tab.",
        "title": "UQ",
        "properties": {
          
          "uqEngine": {
            "type": "string",
            "title": "UQ Engine"
          },
          "uqType": {
            "type": "string",
            "title":"Dakota Method Category"
          }
        },
        "required": [
          "uqEngine",
          "uqType"
        ],
        "additionalProperties": {
          "samplingMethodData": {
            "type": "object",
            "title": "Forward Propagation",
            "properties": {
              "method":  {"type": "string" , "title": "method"},
              "samples": {"type": "integer", "title": "samples"},
              "seed":    {"type": "integer", "title": "seed"}
            },
            "required": [
              "method",
              "samples",
              "seed"
            ]
          },
          "reliabilityMethodData": {
            "type": "object",
            "title": "Reliability Analysis",
            "properties":{
              "integrationMethod": {"type": "string"},
              "levelType":         {"type": "string"},
              "localMethod":       {"type": "string"},
              "method":            {"type": "string"},
              "mpp_Method":        {"type": "string"},
              "probabilityLevel":  {"type": "array" }
            }
          }
        }
      },
      "fem": {
        "type": "object",
        "description": "Inputs for the FEM tab.",
        "title": "FEM",
        "properties": {
          "dir": {
            "type": "string"
          },
          "inputFile": {
            "type": "string",
            "title":"Input File"
          },
          "mainInput": {
            "type": "string"
          },
          "mainPostprocessScript": {
            "type": "string"
          },
          "numInputs": {
            "type": "integer"
          },
          "parametersFile": {
            "type": "string"
          },
          "parametersScript": {
            "type": "string"
          },
          "postprocessScript": {
            "type": "string"
          },
          "program": {
            "type": "string"
          }
        },
        "required": [
          "dir",
          "inputFile",
          "mainInput",
          "mainPostprocessScript",
          "numInputs",
          "parametersFile",
          "parametersScript",
          "postprocessScript",
          "program"
        ]
      },
      "localAppDir": {
        "type": "string",
        "description": "[incomplete]"
      },
      "python":  {"type": "string"},
      "randomVariables": {
        "type": "array",
        "title": "RV",
        "items": {
          "type": "object",
          "properties": {
            "distribution":  {"type": "string" },
            "name":          {"type": "string" },
            "refCount":      {"type": "integer"},
            "stdDev":        {"type": "number" },
            "value":         {"type": "string" },
            "variableClass": {"type": "string" }
          },
          "additionalProperties": {
            "mean":          {"type": "number"},
            "lowerbound":    {"type": "number"},
            "upperbound":    {"type": "number"}
          },
          "required": [
            "distribution",
            "name",
            "refCount",
            "value",
            "variableClass"
          ]
        }
      },
      "remoteAppDir":  {"type": "string"},
      "uqResults":     {"type": "object"},
      "workingDir":    {"type": "string"}
    },
    "required": [
      "Applications",
      "EDP",
      "UQ_Method",
      "fem",
      "localAppDir",
      "python",
      "randomVariables",
      "remoteAppDir",
      "uqResults",
      "workingDir"
    ]
  }
  
  