

{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for quoFEM input.json files.",
    "type": "object",
    "properties": {
      "Applications": {
        "type": "object",
        "properties": {
          "UQ": {
            "type": "object",
            "properties": {
              "Application": {
                "type": "string"
              },
              "ApplicationData": {
                "type": "object"
              }
            },
            "description": "[incomplete desciption.]",
            "required": [
              "Application",
              "ApplicationData"
            ]
          }
        },
        "required": [
          "UQ"
        ]
      },
      "EDP": {
        "type": "array",
        "items": [
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              }
            },
            "required": [
              "name"
            ]
          },
          {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              }
            },
            "required": [
              "name"
            ]
          }
        ]
      },
      "UQ_Method": {
        "type": "object",
        "description": "Inputs for the UQ tab.",
        "properties": {
          
          "uqEngine": {
            "type": "string"
          },
          "uqType": {
            "type": "string"
          }
        },
        "required": [
          "uqEngine",
          "uqType"
        ],
        "additionalProperties": {
          "samplingMethodData": {
            "type": "object",
            "properties": {
              "method": {
                "type": "string"
              },
              "samples": {
                "type": "integer"
              },
              "seed": {
                "type": "integer"
              }
            },
            "required": [
              "method",
              "samples",
              "seed"
            ]
          },
          "reliabilityMethodData": {
            "integrationMethod": {"type": "string"},
            "levelType": {"type": "string"},
            "localMethod": {"type": "string"},
            "method": {"type": "string"},
            "mpp_Method": {"type": "string"},
            "probabilityLevel": {
              "type": "array"
            }
          }
        }
      },
      "fem": {
        "type": "object",
        "description": "Inputs for the FEM tab.",
        "properties": {
          "dir": {
            "type": "string"
          },
          "inputFile": {
            "type": "string"
          },
          "mainInput": {
            "type": "string"
          },
          "mainPostprocessScript": {
            "type": "string"
          },
          "numInputs": {
            "type": "integer"
          },
          "parametersFile": {
            "type": "string"
          },
          "parametersScript": {
            "type": "string"
          },
          "postprocessScript": {
            "type": "string"
          },
          "program": {
            "type": "string"
          }
        },
        "required": [
          "dir",
          "inputFile",
          "mainInput",
          "mainPostprocessScript",
          "numInputs",
          "parametersFile",
          "parametersScript",
          "postprocessScript",
          "program"
        ]
      },
      "localAppDir": {
        "type": "string",
        "description": "[incomplete]"
      },
      "python": {
        "type": "string"
      },
      "randomVariables": {
        "type": "array",
        "items": [
          {
            "type": "object",
            "properties": {
              "distribution": {
                "type": "string"
              },
              "mean": {
                "type": "integer"
              },
              "name": {
                "type": "string"
              },
              "refCount": {
                "type": "integer"
              },
              "stdDev": {
                "type": "integer"
              },
              "value": {
                "type": "string"
              },
              "variableClass": {
                "type": "string"
              }
            },
            "required": [
              "distribution",
              "name",
              "refCount",
              "value",
              "variableClass"
            ]
          }
        ]
      },
      "remoteAppDir": {
        "type": "string"
      },
      "uqResults": {
        "type": "object"
      },
      "workingDir": {
        "type": "string"
      }
    },
    "required": [
      "Applications",
      "EDP",
      "UQ_Method",
      "fem",
      "localAppDir",
      "python",
      "randomVariables",
      "remoteAppDir",
      "uqResults",
      "workingDir"
    ]
  }
  
  